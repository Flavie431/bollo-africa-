<div class="row justify-content-md-center text-center">
       <br> <br>
        <div class="col-md-5 col-lg-4 card">
            <h1>Bol<span class="text-theme">lo.</h1>
            
          <div class="form-signin">
            <br>
            <h4> Register
              </h4>
              <small>Plesse fill the form below</small>
            <% include ('./partials/messages') %>
            <form action="/users/register" method="POST">
              <div class="form-group">
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="form-control input-block-level"
                  placeholder="Enter Name"
                  value="<%= typeof name != 'undefined' ? name : '' %>"
                />
              </div>
              <div class="form-group">
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control input-block-level"
                  placeholder="Enter Email"
                  value="<%= typeof email != 'undefined' ? email : '' %>"
                />
              </div>
              <div class="form-group">
                <select name="country" id="country" disabled="disabled" 
                class="form-control input-block-level"
                >
                  <option value="Cameroon"> Cameroon</option>
                  
      
                </select>
              
                
            </div>
              <div class="form-group">
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control input-block-level"
                  placeholder="Create Password"
                  value="<%= typeof password != 'undefined' ? password : '' %>"
                />
              </div>
              <div class="form-group">
                <input
                  type="password"
                  id="password2"
                  name="password2"
                  class="form-control input-block-level"
                  placeholder="Confirm Password"
                  value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
              </div>
              <button type="submit" class="btn btn-primary btn-block">
                Register
              </button>
            </form>
            <p class="mt-4">Have An Account? <a href="/users/login">Login</a></p>
          </div>
        </div>
</div>






